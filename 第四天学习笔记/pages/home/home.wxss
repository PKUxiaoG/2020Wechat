/* pages/home/home.wxss */
.title{
  /**控制标题样式**/
  font-size: 20px; 
  font-weight: 600;
  text-align: center;
  }
.item-title{
  font-size:18px;
  font-weight:500;
  color:#c60;
}
.desc,.item-desc{
  /**控制每个子标题下的字体颜色**/
  color: #333;
}
#wxmlinfo,#studyweapp{ 
  /**调整除了标题以外的行距，字体大小**/
  font-size:16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  line-height: 1.6;
}
#wxmlinfo,#studyweapp{
  padding-top:0px;
  padding-right:15px;
  padding-bottom:0px;
  padding-left:15px;
}
.title,.item-title{
  margin-top:0.5em;
  margin-bottom:0.5em;
}
.item-title{
  border-left: 3px solid #c60;
  padding-left: 20px;
}
.item-link{
  margin: 20px;
  padding:10px 15px;
  background-color: #4ea6ec;
  color: #fff;
  border-radius: 4px;
}
.list-item{
  background-color: #82c2f7;
  height: 100px;
  text-align: center;
  border:1px solid #bdd2f8;
  flex:1;
  display: flex;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}
.flex-box{
  display: flex;
}
